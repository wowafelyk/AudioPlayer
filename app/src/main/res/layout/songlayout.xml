<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Recycle_Element_Margin"
    android:id="@+id/root">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startButton"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/music_action"
            android:layout_rowSpan="2"
            android:layout_margin="@dimen/margin_3dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Holo"
            android:text="SongName"
            android:id="@+id/textSongName"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/startButton"
            android:layout_toEndOf="@+id/startButton"
            android:textSize="@dimen/Text_Size_medium" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Holo"
            android:text="Author"
            android:id="@+id/textAuthor"
            android:layout_row="1"
            android:layout_column="1"
        android:layout_below="@+id/textSongName"
        android:layout_alignLeft="@+id/textSongName"
        android:layout_alignStart="@+id/textSongName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Holo"
        android:text="Time"
        android:id="@+id/textDuration"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="right"
        android:layout_below="@+id/textSongName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Holo"
        android:text="Album"
        android:id="@+id/textAlbum"
        android:layout_below="@+id/textAuthor"
        android:layout_toRightOf="@+id/startButton"
        android:layout_toEndOf="@+id/startButton"
        android:textSize="@dimen/Text_Size_Small" />

</RelativeLayout>
